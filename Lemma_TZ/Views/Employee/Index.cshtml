@model IQueryable<Employee>

@{
    ViewData["Title"] = "Список сотрудников";
}

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.MiddleName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>
                    <form asp-action="DeleteEmployee" asp-route-employeeId="@employee.EmployeeId" method="post">
                        <a asp-action="EditEmployee" asp-route-employeeId="@employee.EmployeeId" class="btn btn-warning">Изменить</a>
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="AddEmployee" class="btn btn-primary">Новый сотрудник</a>
    <a asp-action="Index" asp-controller="Main" class="btn btn-outline-primary">К списку задач</a>
</div>