@model Todo

@{
    ViewData["Title"] = "Создать задачу";
}

<form asp-action="AddTask" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName"></span>
    </div>

    <div class="form-group">
        <label asp-for="PerformerName"></label>
        <input asp-for="PerformerName" class="form-control" />
        <span asp-validation-for="PerformerName"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority"></label>
        <input asp-for="Priority" min="1" max="5" value="1" class="form-control" />
        <span asp-validation-for="Priority"></span>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-action="Index" asp-controller="Main" class="btn btn-secondary">Отменить</a>
    </div>

</form>

@section scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}